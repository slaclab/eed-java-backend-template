logging:
  level:
    edu.stanford.slac.{{ project_slug }}: DEBUG
    org.springdoc: debug

server:
  tomcat:
    mbeanregistry:
      enabled: true

edu:
  stanford:
    slac:
      {{ project_slug }}:

management:
  endpoints:
    web:
      exposure:
        include: health,info,prometheus
  metrics:
    tags:
      application: ${spring.application.name}

spring:
  application:
    name: '{{ project_name }}' 

# swagger-ui custom path
springdoc:
  swagger-ui:
    path: /swagger-ui.html
  api-docs:
    path: /api-docs